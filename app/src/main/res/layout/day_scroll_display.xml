<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.wdiget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/cardview_light_background">

    <ImageView
        android:id="@+id/iv_day_banner_card"
        android:padding="0dp"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/tv_day_title_card"
        android:textSize="30sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_day_focus_card"
        android:textSize="22sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/colorTextGrey" />


</android.support.v7.wdiget.CardView>